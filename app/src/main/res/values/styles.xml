<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PinkButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/pink_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="PinkOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/pink_primary</item>
        <item name="android:textColor">@color/pink_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="PinkEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/pink_primary</item>
        <item name="hintTextColor">@color/pink_primary</item>
    </style>

    <style name="PinkCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/pink_primary</item>
    </style>

    <style name="PinkFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/pink_secondary</item>
        <item name="tint">@color/white</item>
    </style>

</resources>
